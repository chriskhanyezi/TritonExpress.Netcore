
@model IEnumerable<TritonExpress.DAL.Entities.WayBill>

@{
    ViewData["Title"] = "Vehicles";
}

<h5>Waybills Assigned | <a class="glyphicon glyphicon-plus-search" asp-area="" asp-controller="" asp-action=""> Search Vehicles</a> | <a class="glyphicon glyphicon-plus-sign" asp-area="" asp-controller="Home" asp-action="AddVehicle">Create New Vehicle</a> </h5>
<br />

@if (Model != null && Model.Count() > 0)
{
    <table class="table table-responsive table-striped">
        <thead>
            <tr>
                <th>
                    Reference Number
                </th>
                <th>
                    Pick Up By
                </th>
                <th>
                    Delivered By
                </th>
                <th>
                    Origin
                </th>
                <th>
                    Destination
                </th>
                <th>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    <small>@Html.DisplayFor(modelItem => item.ReferenceNumber)</small> 
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PickUpByDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeliveredByDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Origin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Destination)
                </td>
                <td>
                    <a asp-area="" asp-controller="Home" asp-action="UpdateWayBill" asp-route-id="@item.Id" class="glyphicon glyphicon-pencil" title="Update WayBill"><b>Update WayBill</b></a>
                </td>
            </tr>
            }
        </tbody>
    </table>
}